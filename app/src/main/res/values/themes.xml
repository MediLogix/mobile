<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NasaApp" parent="Theme.MaterialComponents.DayNight">
        <item name="colorPrimary">@color/white</item> <!-- Primary color for the app bar -->
        <item name="colorPrimaryVariant">@color/black</item> <!-- Variant of primary color -->
        <item name="colorOnPrimary">@color/black</item> <!-- Text and icon color on primary color -->

        <item name="colorSecondary">@color/gray</item> <!-- Secondary color for components like buttons -->
        <item name="colorSecondaryVariant">@color/gray</item> <!-- Variant of secondary color -->
        <item name="colorOnSecondary">@color/black</item> <!-- Text and icon color on secondary color -->

        <item name="android:windowBackground">@color/white</item>
        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>

    </style>

</resources>